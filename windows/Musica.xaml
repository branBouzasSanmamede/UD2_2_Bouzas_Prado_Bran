<Window x:Class="UD2_2_Bouzas_Prado_Bran.windows.Musica" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Música" Width="500" Height="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FFF4F4F4">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Reproductor de música" Grid.Row="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>
        <Border Grid.Row="1" BorderThickness="2" BorderBrush="#FF4899DA" CornerRadius="20" Background="White" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="ImgCancion" Source="/img/songs/default.png" Stretch="Uniform"/>
        </Border>
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="LblEstadoVoz" Grid.Column="0" Content="Esperando comando..." VerticalAlignment="Center" FontSize="14"/>
            <Button Grid.Column="1" Content="🎤 Escuchar" Width="120" Height="40" Margin="10,0" Click="BtnEscuchar_Click"/>
            <Button Grid.Column="2" Content="⏪ Volver" Width="100" Height="40" Margin="10,0" Click="BtnVolver_Click"/>
        </Grid>
    </Grid>
</Window>