<Window x:Class="UD2_2_Bouzas_Prado_Bran.windows.OpcionesBase" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Opciones" Width="400" Background="#F4F4F4" ResizeMode="NoResize" Top="20" Left="20" SizeToContent="Height">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Opciones de voz" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <Grid Grid.Row="1">
            <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="20,20,20,20" Background="#FF4899DA" Padding="10">
                <ListBox x:Name="LstOpciones" FontSize="16" SelectionMode="Single" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>